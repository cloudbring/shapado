%table.table
  %tr
    %th
      =t("activerecord.attributes.user.login")
    %th
      =t("activerecord.attributes.user.email")
    %th
  -@users.each do |user|
    %tr
      %td
        = link_to "#{h(user.name.present? ? user.name : user.login)}", user_path(user)
      %td
        = user.email
      %td
        = button_to "send confirmation email", send_confirmation_imports_path(:user_id => user.id)

-unless @users.empty?
  %strong
    = button_to "send confirmation email to all", send_confirmation_imports_path(:all => true)
